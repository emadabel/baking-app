<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.emadabel.bakingapp.ConfigurableWidgetConfigureActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recipe_list_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/error_message_tv"
        style="@style/ErrorMessage"
        android:text="@string/invalid_error_message"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/loading_indicator_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/pb_width"
        android:layout_height="@dimen/pb_height"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="invisible" />
</FrameLayout>